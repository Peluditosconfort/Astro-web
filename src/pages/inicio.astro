</MainLayout>


<style>
    .swiper-container {
        margin: 0 auto;
        height: 100%
        ;
        overflow: hidden;
    }

    .swiper-slide {
        width: 300px;
    }

    .swiper-wrapper {
        height: 80%;
    }
</style>

<script>
    import Swiper from "swiper/bundle";
    import "swiper/swiper-bundle.css";

    var mySwiper = new Swiper(".swiper-container", {
        loop: true,
        speed: 1000,
        /*  autoplay: {
           delay: 3000,
       }, */
        effect: "coverflow",
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: "auto",
        coverflowEffect: {
            rotate: 0,
            stretch: 10,
            depth: 100,
            modifier: 1,
            slideShadows: false,
        },

        // Navigation arrows
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
</script>
