            <div class="arrows">

                <button
                    id="prev"
                    class="group flex items-center justify-center w-11 h-11 bg-white rounded-full cursor-pointer relative overflow-hidden transition-all duration-700 shadow-lg hover:bg-white xl:hover:w-32 xl:hover:rounded-lg"
                >
