---
import BlogLayout from "../layouts/BlogLayout.astro";
import PostCard from "../components/Blog/PostCard.astro";
const postList = await Astro.glob("../pages/posts/*.md");

const title = "BlogInterfaz";
---

<BlogLayout title={title}>

  <div class="max-w-screen-xl mx-auto p-5 sm:p-10 md:p-16 bg-gray-100 rounded-2xl">
    <ul class="grid md:grid-cols-2 sm:grid-cols-1 lg:grid-cols-3 gap-10">
      {
        postList.map((post) => (
          <li>
            <PostCard
              image={post.frontmatter.image}
              url={post.url}
              title={post.frontmatter.title}
              pubDate={post.frontmatter.pubDate}
              previewText={post.frontmatter.previewText}
              tags={post.frontmatter.tags[1]}
            />
          </li>
        ))
      }
    </ul>
  </div>
  
</BlogLayout>
