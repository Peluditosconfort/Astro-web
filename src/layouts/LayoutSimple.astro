---
import MegaMenu from "../components/MegaMenu.astro";
import Footer from "../components/Footer.astro";
import LatestPosts from "../components/Blog/LatestPosts.astro"
import FloatButtons from "../components/FloatButtons.astro";
import Brands from "../components/Brands.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" href="/public/img/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/src/estilos.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link href="https://fonts.cdnfonts.com/css/myriad-pro" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.typekit.net/nfy3ymk.css" />
    <link rel='stylesheet' href='https://unpkg.com/emoji.css/dist/emoji.min.css'>

    
  </head>
  <body>
    <header>
      <MegaMenu positionNav="sticky" bgNav="bg-naranja"/>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>

    <script src="/src/main.js"></script>
  </body>
</html>
