---
const { textoBoton } = Astro.props;
const { iconoBoton } = Astro.props;
const { fondo } = Astro.props;

---

<div>
  <a href="#" class={`rounded-lg relative h-14 xl:w-52 cursor-pointer flex items-center border border-white group hover:bg-white active:bg-white active:border-white sm:w-40 text-lg bg-${fondo}`}>
    <span
    class="text-white font-lato  sm:ml-4 transform group-hover:translate-x-10 sm:group-hover:translate-x-10 transition-all duration-300 md:ml-8"
    >{textoBoton}</span
  >
  <span
    class="absolute right-0 h-14 w-14 rounded-lg bg-white flex items-center justify-center transform group-hover:translate-x-0 group-hover:w-full transition-all duration-300 active:bg-naranja border border-naranja"
  >
    <i class={iconoBoton}></i>
  </span>
  </a>


