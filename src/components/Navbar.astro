<style>


  .ocultar {
    display: none;
  }

  .navbar.scrolled {
    background-color: #f2790c;
}


.barras_menu {
    width: 30px;
    height: 30px;   
    cursor: pointer;
    
}

.barras_menu span {
    display: block;
    width: 100%;
    height: 2px;
    background: rgb(255, 255, 255);
    margin-top: 6px;
    transform-origin: 0px 100%;
    transition: all 600ms;
}

.activar1 {
    transform: rotate(45deg)
    translate(-2px, 1px);

}
.activar2 {
    opacity: 0;
    margin-left: -30px;
}

.activar3 {
    transform: rotate(-45deg)
    translate(-4px, 2px);
}
</style>


<script>
  document.querySelector(".barras_menu").addEventListener("click", animacion);

var linea1__barras = document.querySelector(".linea1__barras");
var linea2__barras = document.querySelector(".linea2__barras");
var linea3__barras = document.querySelector(".linea3__barras");

function animacion () {
    linea1__barras.classList.toggle("activar1")
    linea2__barras.classList.toggle("activar2")
    linea3__barras.classList.toggle("activar3")

}


window.addEventListener('scroll', function() {
    var navbar = document.querySelector('.navbar');
    if (window.scrollY > 50) { 
        navbar.classList.add('scrolled');
    } else {
        navbar.classList.remove('scrolled');
    }
});

document.addEventListener('scroll', function () {
      const scrollY = window.scrollY;
      const imagen1 = document.getElementById('imagen1');
      const imagen2 = document.getElementById('imagen2');

      if (scrollY > 50) { // Cambia este valor seg√∫n tus necesidades
        imagen1.classList.add('ocultar');
        imagen2.classList.remove('ocultar');
      } else {
        imagen1.classList.remove('ocultar');
        imagen2.classList.add('ocultar');
      }
    });

</script>