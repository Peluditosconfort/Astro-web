        transform: translateX(0);
    }
    100% {
        transform: translateX(calc(-200px * 28)); /* Ajusta según el número total de imágenes */
    }
}

@keyframes scroll-right {
    0% {
        transform: translateX(calc(-200px * 28)); /* Ajusta según el número total de imágenes */
    }
    100% {
        transform: translateX(0);
    }
}

</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const slideTrack1 = document.getElementById('slideTrack1');
    const slideTrack2 = document.getElementById('slideTrack2');
    
    // Función para duplicar las imágenes en un slide track
    const duplicateSlides = (slideTrack) => {
        const slides = slideTrack.children;
        
        // Crea un nuevo fragmento de documento para duplicar las imágenes
        const fragment = document.createDocumentFragment();
    
        // Duplica las imágenes
        for (let i = 0; i < slides.length; i++) {
            const clone = slides[i].cloneNode(true); // Clona el nodo
            fragment.appendChild(clone);
        }
    
        // Añade el fragmento duplicado al track
        slideTrack.appendChild(fragment);
        
        // Ajusta el ancho del track para incluir las imágenes duplicadas
        const trackWidth = slides.length * 200; // Ancho de las imágenes originales
        slideTrack.style.width = `${trackWidth * 2}px`; // Doble del ancho total
    };

    // Aplica la función a ambos tracks
    duplicateSlides(slideTrack1);
    duplicateSlides(slideTrack2);
});

</script>