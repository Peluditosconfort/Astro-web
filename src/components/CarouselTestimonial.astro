  <style>

  .slider-content {
    overflow: hidden;
  
    margin: 0 40px;
  }
  
  .swiper-button-next{
    right: 0;
    color: #04297e;
  }
  .swiper-button-prev{
    left: 0;
    color: #04297e
  }
  
  
  @media screen and (max-width:768px) {
    .slider-content{
      margin: 0 10px;
    }
    .swiper-navBtn{
      display: block;
    }
  
    .swiper-button-next{
    right: 20px;
  
  }
  .swiper-button-prev{
    left: 20px;
  
  }
  
    .group .info {
          opacity: 1 !important;
          transform: translateY(0) !important;
          transition: none !important;
      }
  
      .group:hover .info {
          opacity: 1 !important;
          transform: translateY(0) !important;
      }
  }
  
  
  .group .info {
          opacity: 0;
          transform: translateY(10px);
          transition: 0.5s ease, transform 0.5s ease;
      }
      
      .group:hover .info {
          opacity: 1;
          transform: translateY(0);
      }
  </style>
  
  <script>
  
      import Swiper from "swiper/bundle";
      import "swiper/swiper-bundle.css";
  
    var swiper = new Swiper(".slider-content", {
      slidesPerView: 3,
      spaceBetween: 25,
      loop: true,
      centerSlide:'true',
      fade:'true',
      grabCursor:'true',
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
        dynamicBullets:true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints:{
          0:{
              slidesPerView:1,
          },
          520:{
              slidesPerView:2,
          },
          950:{
              slidesPerView:3,
          },
      }
    });
  </script>
  